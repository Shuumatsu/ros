[build]
# https://doc.rust-lang.org/nightly/rustc/platform-support.html
# Bare RISC-V (RV64IMAFDC ISA)
target = "riscv64gc-unknown-none-elf"
rustflags = ['-Clink-arg=-Tsrc/kernel.ld']

[target.riscv64gc-unknown-none-elf]
runner = "qemu-system-riscv64 -machine virt -cpu rv64 -smp 4 -m 128M -drive if=none,format=raw,file=hdd.dsk,id=foo -device virtio-blk-device,scsi=off,drive=foo -nographic -serial mon:stdio -bios none -device virtio-rng-device -device virtio-gpu-device -device virtio-net-device -device virtio-tablet-device -device virtio-keyboard"